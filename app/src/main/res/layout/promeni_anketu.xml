<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:layout_marginTop="99dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/predloziNovuAnketu"
        android:layout_width="297dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Promenite anketu"
        android:layout_marginTop="128dp"
        android:textColor="#24502B"
        android:textSize="25sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pitanje"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Pitanje:"
        android:layout_marginTop="175dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/boxPitanje"
        android:layout_width="374dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="224dp"
        android:text="Pitanje:"
        android:background="@drawable/edittext_border"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"/>


    <EditText
        android:id="@+id/editOdgovor1"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="1. odgovor:"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="335dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/editOdgovor2"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="2. odgovor"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="418dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnPosaljiPredlog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="510dp"
        android:background="@drawable/pravljenjenalogadugme"
        android:text="Postavi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-114dp">

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="143dp"
            android:layout_height="59dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnNapNal"
            android:layout_width="137dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Vrati se na\nanketu"
            android:textSize="13sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/roundedView2"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="613dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pogledajteanketu"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:text="Vidite predloge anketa"
        android:layout_marginTop="644dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="692dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir2"
            android:layout_width="289dp"
            android:layout_height="67dp"
            android:background="@drawable/pravljenjenalogadugme"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnPredloziAnketa"
            android:layout_width="281dp"
            android:layout_height="59dp"
            android:text="Predlozi anketa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="10dp"
            android:background="@drawable/logindugme"
            android:textColor="#62925F"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_above="@id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scan"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:src="@drawable/skeniraj"
        app:backgroundTint="@android:color/transparent"
        app:tint="@android:color/transparent"
        android:elevation="10dp"/>

</FrameLayout>

