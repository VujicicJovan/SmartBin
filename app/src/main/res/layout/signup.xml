<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">
    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="638dp"
        android:layout_marginTop="166dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="213dp"
        android:layout_marginStart="-101dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/kamera"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="247dp"
        android:layout_marginStart="60dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir2"
            android:layout_width="178dp"
            android:layout_height="44dp"
            android:background="@drawable/pravljenjenalogadugme"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnPredloziAnketa"
            android:layout_width="172dp"
            android:layout_height="38dp"
            android:text="Izaberite sliku"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationZ="10dp"
            android:background="@drawable/logindugme"
            android:textColor="#62925F"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/pravougaonik"
        android:layout_width="370dp"
        android:layout_height="115dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/rounded_rectangle"
        android:contentDescription="@null"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/napraviteNalog"
        android:layout_width="325dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:text="Napravite\nnalog!"
        android:layout_marginTop="70dp"
        android:textColor="#24502B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editIme"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Ime"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="359dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/editPrezime"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Prezime"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="441dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="523dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/editLozinka"
        android:layout_width="317dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Lozinka"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="605dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnZavrsite"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="700dp"
        android:background="@drawable/pravljenjenalogadugme"
        android:text="ZavrÅ¡ite"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnImamNalog"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:text="Imate nalog\nKliknite da se ulogujete"
        android:textColor="#9AD98E"
        android:textSize="15sp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@android:color/transparent"/>
</FrameLayout>