<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/diagram"
        android:layout_width="55dp"
        android:layout_height="249dp"
        android:layout_marginTop="201dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-150dp"
        android:background="@drawable/brojevi"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/okvirPovezivanje"
        android:layout_width="266dp"
        android:layout_height="65dp"
        android:layout_marginTop="502dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dashed_border"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/povezivanje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Povezivanje..."
        android:layout_marginTop="518dp"
        android:textColor="#62925F"
        android:textSize="25sp"
        android:textStyle="bold"
        android:elevation="10dp"/>
    <TextView
        android:layout_marginStart="52dp"
        android:id="@+id/tekst1"
        android:layout_width="301dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:text="Približite poleđinu telefona\nmestu na kanti označenom\nNFC simbolom"
        android:layout_marginTop="194dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="start"/>

    <TextView
        android:layout_marginStart="52dp"
        android:id="@+id/tekst2"
        android:layout_width="301dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:text="Držite telefon mirno dok se ne\npojavi potvrda očitavanja"
        android:layout_marginTop="299dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="start"/>

    <TextView
        android:layout_marginStart="52dp"
        android:id="@+id/tekst3"
        android:layout_width="301dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:text="Ako se ništa ne desi, proverite\nda li je NFC uključen u\npodešavanjima telefona"
        android:layout_marginTop="387dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="start"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="666dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="212dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnPrekinitePovezivanje"
            android:layout_width="206dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Prekinite povezivanje"
            android:textSize="13sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>




    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_height="60dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />
</FrameLayout>