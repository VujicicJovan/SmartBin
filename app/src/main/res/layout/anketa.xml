<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pitanje"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Kafa vs Čaj?"
        android:layout_marginTop="100dp"
        android:textColor="#24502B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="3dp"
        android:background="#62925F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="169dp"/>

    <TextView
        android:id="@+id/pogledajteanketu"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Vidite koji korisnici su \nnajvišem brojem bodova"
        android:layout_marginTop="510dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="485dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/pravougaonik"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/rounded_rectangle"
            android:contentDescription="@null"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/btnRangLista"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Rang lista"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:elevation="10dp"
            android:translationZ="10dp"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="212dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnPredAnketu"
            android:layout_width="206dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Predložite anketu"
            android:textSize="13sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="820dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />
</FrameLayout>

