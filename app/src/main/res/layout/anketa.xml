<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pitanje"
        android:layout_width="239dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Kafa vs Čaj?"
        android:layout_marginTop="100dp"
        android:textColor="#24502B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="3dp"
        android:background="#62925F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="169dp"/>

    <ImageView
        android:id="@+id/diagram"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="186dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-90dp"
        android:background="@drawable/pita_anketa"
        android:contentDescription="@null" />


    <ImageView
        android:id="@+id/tacka1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#62925F"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/odgovor1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="kafa"
        android:layout_marginStart="90dp"
        android:layout_marginTop="220dp"
        android:textColor="#24502B"
        android:textSize="27sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="start"/>

    <ImageView
        android:id="@+id/tacka2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#9AD98E"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/odgovor2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="čaj"
        android:layout_marginStart="90dp"
        android:layout_marginTop="280dp"
        android:textColor="#24502B"
        android:textSize="27sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="start"/>

    <TextView
        android:id="@+id/datum"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="24.2.2025."
        android:layout_marginStart="90dp"
        android:layout_marginTop="410dp"
        android:textColor="#62925F"
        android:textStyle="bold"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pogledajteanketu"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Vidite koji korisnici su \nnajvišem brojem bodova"
        android:layout_marginTop="510dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="485dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/pravougaonik"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/rounded_rectangle"
            android:contentDescription="@null"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/btnRangLista"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Rang lista"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:elevation="10dp"
            android:translationZ="10dp"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="212dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnPredAnketu"
            android:layout_width="206dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Predložite anketu"
            android:textSize="13sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <ImageView
        android:id="@+id/home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/home"
        android:layout_marginStart="-153dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/skeniraj" />

    <ImageView
        android:id="@+id/icon_tren"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/anketa2"
        android:layout_marginStart="-68dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_toplista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toplista"
        android:layout_marginStart="69.5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_anketa"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/anketa"
        android:layout_marginStart="-68dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user"
        android:layout_marginStart="153dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />
</FrameLayout>

