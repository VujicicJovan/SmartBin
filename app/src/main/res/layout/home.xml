<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/prislonitelefon"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Prislonite telefon na kantu da \nvidite rezultate"
        android:layout_marginTop="156dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pogledajteanketu"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Pogledajte trenutno pitanje i\n glasove u realnom vremenu"
        android:layout_marginTop="569dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/pravougaonik"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/rounded_rectangle"
            android:contentDescription="@null"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/btnAnketa"
            android:layout_width="250dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Anketa"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:elevation="10dp"
            android:translationZ="10dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="820dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />
</FrameLayout>

