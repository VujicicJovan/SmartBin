<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/prislonitelefon"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Prislonite telefon na kantu da \nvidite rezultate"
        android:layout_marginTop="156dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/profilna"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_marginTop="269dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/skeniraj_upustvo"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/pogledajteanketu"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Pogledajte trenutno pitanje i\n glasove u realnom vremenu"
        android:layout_marginTop="569dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/pravougaonik"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:background="@drawable/rounded_rectangle"
            android:contentDescription="@null"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/btnAnketa"
            android:layout_width="250dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Anketa"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:elevation="10dp"
            android:translationZ="10dp"/>
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/home"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:tint="@color/green" />

    <!-- Osigurano da se ne pomera na veÄ‡im ekranima -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/skeniraj" />


    <!-- Precizno pozicioniranje ikona na navigaciji -->
    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/home2"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="40dp"
        android:tint="@color/green"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_toplista"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="-70dp"
        android:src="@drawable/toplista"
        android:tint="@color/green"
        android:translationZ="5dp"/>

    <ImageView
        android:id="@+id/icon_anketa"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="260dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/anketa"
        android:tint="@color/green"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="40dp"
        android:tint="@color/green"
        android:translationZ="5dp" />


</FrameLayout>
