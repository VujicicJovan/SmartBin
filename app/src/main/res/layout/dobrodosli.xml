<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo"
        android:scaleType="fitCenter"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/kvadrat"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="423dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/pravougaonik"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_rectangle"
        android:contentDescription="@null"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dobrodosli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Dobro došli!"
        android:layout_marginTop="395dp"
        android:textColor="#24502B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Glasajte flašicom, vidite rezultate!"
        android:layout_marginTop="517dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/btnNapNal"
        android:layout_width="374dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="573dp"
        android:background="@drawable/pravljenjenalogadugme"
        android:text="Napravite Nalog"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="671dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="374dp"
            android:layout_height="66dp"
            android:background="@drawable/pravljenjenalogadugme"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="366dp"
            android:layout_height="58dp"
            android:text="Ulogujte se"
            android:textSize="25sp"
            android:textStyle="bold"
            android:translationZ="10dp"
            android:background="@drawable/logindugme"
            android:textColor="#62925F"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>

