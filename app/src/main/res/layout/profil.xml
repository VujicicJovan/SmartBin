<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_marginTop="56dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo_bez_pozadine"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/kvadrat"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="136dp" >

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="109dp"
            android:layout_height="42dp"
            android:layout_marginTop="14dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnOdjava"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Odjava"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="sofijamarkovic2021@palanackagimnazija.edu.rs"
        android:layout_marginTop="294dp"
        android:textColor="#24502B"
        android:textSize="16sp"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="3dp"
        android:background="#62925F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="336dp"/>

    <ImageView
        android:id="@+id/profilna"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="-119dp"
        android:layout_marginTop="363dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/profil_cokili"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/ime"
        android:gravity="start"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Sofija"
        android:layout_marginTop="376dp"
        android:textColor="#62925F"
        android:textSize="30sp"
        android:textStyle="bold"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/prezime"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:text="MarkoviÄ‡"
        android:layout_marginTop="418dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"/>

    <ImageView
        android:id="@+id/poljezabodove"
        android:layout_width="200dp"
        android:layout_height="112dp"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/poljezabodove"/>

    <TextView
        android:id="@+id/brpoena1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="540dp"
        android:elevation="10dp"
        android:gravity="center"
        android:text="152"
        android:textColor="#24502B"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/poenitext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bodovi:"
        android:textStyle="bold"
        android:layout_marginTop="510dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/bottom_nav_bg"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <ImageView
        android:id="@+id/home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/home"
        android:layout_marginStart="-153dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_button"
        android:src="@drawable/skeniraj" />

    <ImageView
        android:id="@+id/icon_tren"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user2"
        android:layout_marginStart="153dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_toplista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toplista"
        android:layout_marginStart="69.5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_anketa"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/anketa"
        android:layout_marginStart="-68dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/user"
        android:layout_marginStart="153dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:translationZ="5dp" />

</FrameLayout>