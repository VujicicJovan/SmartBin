<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/kvadrat"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="288dp" >

        <ImageView
            android:id="@+id/okvir"
            android:layout_width="128dp"
            android:layout_height="52dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_rectangle"/>

        <Button
            android:id="@+id/btnOdjava"
            android:layout_width="118dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/pravljenjenalogadugme"
            android:text="Odjava"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Glasajte flašicom, vidite rezultate!"
        android:layout_marginTop="290dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="3dp"
        android:background="#62925F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="336dp"/>

    <TextView
        android:id="@+id/ime"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginStart="163dp"
        android:text="Sofija"
        android:layout_marginTop="376dp"
        android:textColor="#62925F"
        android:textSize="30sp"
        android:textStyle="bold"
        android:elevation="10dp"/>

    <TextView
        android:layout_marginStart="163dp"
        android:id="@+id/prezime"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:text="Marković"
        android:layout_marginTop="418dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"/>

    <ImageView
        android:id="@+id/poljezabodove"
        android:layout_width="200dp"
        android:layout_height="112dp"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/poljezabodove"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="820dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />

</FrameLayout>