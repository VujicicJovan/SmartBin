<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/roundedView"
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:layout_marginTop="181dp"
        android:background="@drawable/rounded_square"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/predloziNovuAnketu"
        android:layout_width="297dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Predložite novu anketu"
        android:layout_marginTop="210dp"
        android:textColor="#24502B"
        android:textSize="25sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pitanje"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text="Pitanje:"
        android:layout_marginTop="273dp"
        android:textColor="#62925F"
        android:textSize="20sp"
        android:elevation="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/boxPitanje"
        android:layout_width="374dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:background="@drawable/edittext_border"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="10dp"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"/>


    <EditText
        android:id="@+id/editOdgovor1"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="1. odgovor:"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="417dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/editOdgovor2"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="2. odgovor"
        android:inputType="text"
        android:textColor="#62925F"
        android:textColorHint="#62925F"
        android:backgroundTint="#62925F"
        android:layout_marginTop="500dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btnPosaljiPredlog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:background="@drawable/pravljenjenalogadugme"
        android:text="Završite"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="99dp"
    android:layout_marginStart="20dp">

    <ImageView
        android:id="@+id/okvir"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangle"/>

    <Button
        android:id="@+id/btnNapNal"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pravljenjenalogadugme"
        android:text="Vrati se na\nanketu"
        android:textSize="13sp"
        android:textColor="#ffffff"/>
</RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="820dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />
</FrameLayout>

